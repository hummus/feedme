<script type="text/javascript">
	var Suggest = {
		set: function(key,value) {
			this[key] = value;
		}, get: function(key) {
			return this[key];
		}
	};
	Suggest.userControler = function(e) {
		var _this = this;
		if (this.con.style.display == 'none') {
			this.con.style.display = 'block';
		}
		for (var i = 0, len = this.li.length; i < len; i++) {
			this.li[i].onmouseover = function() {
				if (_this.select != -1) { _this.li[_this.select].className = _this.off }
				_this.set('select', this.getAttribute('num'));
				this.className = _this.on;
			}
			this.li[i].onclick = function(e) {
				_this.set('select', -1);
				_this.obj.value = this.innerHTML;
				Gogo._stop_bubble(e);
				_this.con.style.display = 'none';
				try{
					document.getElementsByName('Password')[0].focus();
				}catch(e){}
			}
		}
		Gogo._event_listener(document,'click',function() {
			if (_this.select != -1) { _this.li[_this.select].className = _this.off }
			_this.con.style.display='none';
			_this.set('select', -1);
		})
	}
	Suggest.keybord = function(e) {
		if (!this.con || this.con.style.display == 'none') return;
		this.keys = Gogo._showKeyName(e);
		if ((this.keys == 13 || this.keys == 9) && this.select != -1) {
			this.li[this.select].onclick(e);
			try{
				document.getElementsByName('Password')[0].focus();
			}catch(e){}
		} else if (this.keys == 38) {
			if (this.select > 0) { 
				this.obj.blur();
				this.li[this.select - 1].onmouseover(); 
			}else{
				this.obj.focus();
				this.select=-1;
				this.con.style.display='none';
			}
		} else if (this.keys == 40) {
			if (this.select < this.li.length - 1) { 
				this.obj.blur();
				this.li[parseInt(this.select) + 1].onmouseover(); 
			}else{
				this.obj.focus();
				this.select=-1;
				this.con.style.display='none';
			}
		}
	}
	Suggest.dom = function(data, containerId) {
		this.con = Gogo._get_obj(containerId);
		this.con.style.display='none';
		this.select = -1;
		/*--data must a array--*/
		this.con.innerHTML = ['<li>', data.join('</li><li>'), '</li>'].join('');
		this.li = this.con.getElementsByTagName('li');
		for (var i = 0, len = this.li.length; i < len; i++) {
		   this.li[i].setAttribute('num', i);
		}
	}
	Suggest.data = function(inputId, containerId, data) {
		this.obj = Gogo._get_obj(inputId);
		this.data = data;
		this.on = '';
		this.off = '';
		var _this = this;
		Gogo.__event_listener(this.obj, 'keyup', function(e) {
			if(_this.setData){_this.setData();}
			var keys = Gogo._showKeyName(Gogo._get_event_obj(e));
			if (keys != 38 && keys != 40&&keys != 13) {
				_this.dom(_this.data, containerId);
				_this.userControler(Gogo._get_event_obj(e));
				Gogo._stop_bubble(e);
			}
		});
		Gogo._event_listener(document, 'keyup', function(e) { 
			_this.keybord(Gogo._get_event_obj(e));});
	}
	Gogo.add = function(array, i, extr) {
		array[i] = array[i].substring(array[i].lastIndexOf('@'));
		array[i] = [extr.replace(/[^0-9a-zA-Z_@]/gi,''), array[i]].join('');
	}
	Suggest.check=function(id){
		var form=document.forms[id];
		var ele=[];
		var _this=this;
		var text=form.getElementsByTagName('input');
		for(var i=0,len=text.length;i<len;i++){
			if(text[i].getAttribute('type')=='text'||text[i].getAttribute('type')=='password'){
				ele.push(text[i]);
			}
		}
		form.onsubmit=function(e){
			var e=Gogo._get_event_obj(e);
			e.keyCode=13;
			_this.keybord(e);
			for(i=0,len=ele.length;i<len;i++)
			{
				if(ele[i].value.replace(' ','')==''){
					return false;
				}
			}
		};
	}
	Suggest.setData=function(){
		this.data.each(Gogo.add, this.obj.value.split('@')[0]);
	}
	Suggest.data('email', 'suggest', ['@mail.hust.edu.cn','@smail.hust.edu.cn']);
	Suggest.check('post');
	Suggest.on = 'on';
	Suggest.off = 'off';
</script>
